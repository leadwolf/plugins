{
  "name": "tpdb",
  "version": "0.1.0",
  "authors": ["leadwolf"],
  "description": "Scrape data from tpdb",
  "pluginEvents": ["studioCreated", "studioCustom"],
  "arguments": [
    {
      "name": "dry",
      "type": "Boolean",
      "required": false,
      "default": false,
      "description": "Whether to commit data changes"
    },
    {
      "name": "studios.cacheStudiosPath",
      "type": "String",
      "required": true,
      "default": "./plugins/tpdb/cached_sites.json",
      "description": "Where to store the downloaded studios"
    },
    {
      "name": "studios.cacheDays",
      "type": "Number",
      "required": true,
      "default": 7,
      "description": "How long to reuse downloaded studios before refreshing the whole list"
    }
  ]
}
